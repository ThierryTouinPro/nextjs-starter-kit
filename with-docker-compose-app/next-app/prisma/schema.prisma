datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  birthDate DateTime?
  phone     String?
  gender    String?
  sessions  Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@map("sessions")
}
